    <VersionSuffix>preview</VersionSuffix>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>Microsoft</Company>
    <Authors>Microsoft</Authors>
    <Owners>microsoft, BotFramework, nugetbotbuilder</Owners>
