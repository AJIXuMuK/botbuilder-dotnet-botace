{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/4.Future/schemas/component.schema",
    "$role": "unionType(Microsoft.IDialog)",
    "title": "For-each loop",
    "description": "Execute actions on each item in an array.",
    "type": "object",
    "properties": {
        "itemsProperty": {
            "$role": "expression",
            "title": "Items property",
            "description": "Named memory scope that holds the array.",
            "examples": [
                "user.todoList"
            ]
        },
        "actions": {
            "type": "array",
            "items": {
                "$type": "Microsoft.IDialog"
            },
            "title": "Actions",
            "description": "Actions to execute for each item."
        }
    },
    "required": [
        "itemsProperty",
        "actions"
    ]
}
