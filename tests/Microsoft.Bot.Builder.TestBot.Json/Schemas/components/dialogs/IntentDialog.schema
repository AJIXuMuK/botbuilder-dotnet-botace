{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$type": "Microsoft.IntentDialog",
    "$implements": [
        "Microsoft.IDialog"
    ],
    "title": "Intent Dialog",
    "description": "Configures a recognizer and the intent routes",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "recognizer": {
            "$ref": "../IRecognizer.schema"
        },
        "routes": {
            "type": "object",
            "description": "maps intent->IDialog",
            "additionalProperties": {
                "$ref": "../IDialog.schema#"
            }
        }
    },
    "required": [
        "recognizer",
        "routes"
    ]
}