{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Intent Dialog",
    "description": "Configures a recognizer and the intent routes",
    "$implements": [
        "Microsoft.IDialog"
    ],
    "allOf": [
        {
            "$ref": "../component.schema"
        },
        {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "$id": {
                    "type": "string"
                },
                "$type": {
                    "const": "Microsoft.IntentDialog"
                },
                "recognizer": {
                    "$ref": "../IRecognizer.schema"
                },
                "routes": {
                    "type": "object",
                    "description": "maps intent->IDialog",
                    "additionalProperties": {
                        "$ref": "../IDialog.schema#"
                    }
                }
            },
            "required": [
                "recognizer",
                "routes"
            ]
        }
    ]
}