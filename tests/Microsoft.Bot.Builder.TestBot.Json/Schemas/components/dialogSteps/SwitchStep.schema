{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Switch Step",
    "description": "Step which conditionally decides which step to execute next.",
    "$implements": [
        "Microsoft.IDialogStep"
    ],
    "allOf": [
        {
            "$ref": "../component.schema"
        },
        {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "$id": {
                    "type": "string"
                },
                "$type": {
                    "const": "Microsoft.SwitchStep"
                },
                "condition": {
                    "$ref": "../IExpression.schema",
                    "title": "Condition",
                    "description": "Expression to evaluate.",
                    "examples": [
                        "user.age > 3"
                    ]
                },
                "cases": {
                    "type": "object",
                    "title": "Cases",
                    "description": "Step to execute if expression is true.",
                    "additionalProperties": {
                        "oneOf": [
                            {
                                "$ref": "../IDialogStep.schema"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "$ref": "../IDialogStep.schema"
                                }
                            }
                        ]
                    }
                },
                "ignoreCase": {
                    "type": "boolean",
                    "title": "Ignore carse",
                    "description": "Control whether case comparison is case sensitive."
                }
            }
        }
    ]
}