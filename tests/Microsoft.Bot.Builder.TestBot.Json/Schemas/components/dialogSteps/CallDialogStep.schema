{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Call Dialog",
    "description": "Step which calls another dialog.",
    "$implements": [
        "Microsoft.IDialogStep"
    ],
    "allOf": [
        {
            "$ref": "../component.schema"
        },
        {
            "properties": {
                "$type": {
                    "const": "Microsoft.CallDialogStep"
                },
                "dialog": {
                    "$ref": "../IDialog.schema",
                    "title": "Dialog",
                    "description": "This is the dialog to call."
                },
                "options": {
                    "type": "object",
                    "additionalProperties": true,
                    "title": "Options",
                    "description": "Options to pass to the dialog."
                },
                "property": {
                    "$ref": "../IExpression.schema",
                    "title": "Property",
                    "description": "The property to bind to the dialog and store the result in",
                    "examples": [
                        "user.name"
                    ]
                }
            }
        }
    ]
}