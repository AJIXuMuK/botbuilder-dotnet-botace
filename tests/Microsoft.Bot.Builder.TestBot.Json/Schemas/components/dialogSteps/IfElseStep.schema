{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "If Step",
    "description": "Step which conditionally decides which step to execute next.",
    "$implements": [
        "Microsoft.IDialogStep"
    ],
    "allOf": [
        {
            "$ref": "../component.schema"
        },
        {
            "properties": {
                "$type": {
                    "const": "Microsoft.IfElseStep"
                },
                "ifTrue": {
                    "oneOf": [
                        {
                            "$ref": "../IDialogStep.schema"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "../IDialogStep.schema"
                            }
                        }
                    ],
                    "title": "If True",
                    "description": "Step to execute if expression is true."
                },
                "ifFalse": {
                    "oneOf": [
                        {
                            "$ref": "../IDialogStep.schema"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "../IDialogStep.schema"
                            }
                        }
                    ],
                    "title": "If False",
                    "description": "Step to execute if expression is false."
                },
                "condition": {
                    "$ref": "../IExpression.schema",
                    "title": "Condition",
                    "description": "Expression to evaluate.",
                    "examples": [
                        "user.age > 3"
                    ]
                }
            }
        }
    ]
}